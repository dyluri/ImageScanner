RelativeLayout:
    Button:
        id: back_btn_layout
        pos_hint: {"x": 0.0, "top": 1.0}
        background_color: 0, 0, 0, 0
        size_hint: 0.1, 0.1
        background_normal: "assets/back_button.png"
        on_release: app.on_exit_btn()
        Image:
            source: "assets/back_button_normal.png" if self.parent.state == "normal" else "assets/back_button_down.png"
            pos: self.parent.pos
            size: self.parent.size
    GridLayout:
        cols: 2
        BoxLayout:
            size_hint_x: 0.5
            orientation: 'vertical'
            Widget:
                size_hint_y: 2.0
            BoxLayout:
                orientation: 'horizontal'
                Widget:
                    size_hint_x: .2
                Label:
                    text: "Amiga State:"
                    font_size: 24
                    size_hint_y: 1
                    background_normal: ''
                    background_color:	(.5, .5, .5, 1)
                    canvas.before:
                        Color:
                            rgba: self.background_color
                        Rectangle:
                            size: self.size
                            pos: self.pos
                Label:
                    #text: app.amiga_state
                    font_size: 18
                ToggleButton:
                    text: "Go"
                    font_size: 32
                    size_hint_y: 1
                    background_normal: ''
                    background_color: (0.341, 0.859, 0.192)
                    id: toggle_picture_button
                    on_press: app.toggle_capture()
                Widget: # Empty placeholder
            BoxLayout:
                orientation: 'horizontal' 
                Label:
                    text: "Speed [m/s]:"
                    font_size: 18
                    size_hint_y: 0.5
                Label:
                    text: ''
                    font_size: 16
                    size_hint_y: 0.5
                    id : speed_label
                Label:
                    #text: app.amiga_speed
                    font_size: 18
                Widget: # Empty placeholder
            BoxLayout
                orientation: 'horizontal'
                Widget
                    size_hint_x : .10
                Slider:
                    id: speed_slider
                    min: 0
                    max: 50
                    step: 5
                    size_hint_x: .75
                    center_x: .9
                    on_value: app.update_speed()
                Widget
                    size_hint_x : .10
            Widget:
                size_hint_y: 2.0
            BoxLayout:
                orientation: 'horizontal' 
                Label:
                    text: "Image Delay: "
                    font_size: 18
                    size_hint_y: 0.5
                Label:
                    id: delay_label
                    text: ''
                    font_size: 16
                    size_hint_y: 0.5
                Widget: # Empty placeholder
            BoxLayout
                orientation: 'horizontal'
                Widget
                    size_hint_x : .10
                Slider:
                    id: delay_slider
                    orientation: 'horizontal'
                    min: 1
                    max: 5
                    step : 1
                    size_hint_x: .75
                    center_x: 0.9
                    on_value: app.update_delay()
                Widget:
                    size_hint_x : .10
            Widget:
                size_hint_y: 2.0
            Label:
                id: counter_label
                text: "Counter: 0"
        TabbedPanel:
            size_hint_x: 0.5
            do_default_tab: False
            TabbedPanelItem:
                text: "Camera 1"
                Image:
                    id: camera_1
            TabbedPanelItem:
                text: "Camera 2"
                Image:
                    id: camera_2
            #TabbedPanelItem:
            #    text: "Camera 3"
            #    Image:
            #        id: camera_3

 
